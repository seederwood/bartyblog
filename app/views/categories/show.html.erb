<h2 class="page-header">
  <%= @category.name %>
</h2>
<div class="posts-index">
    <% if @posts.exists? %>
      <% @posts.each_slice(2) do |post| %>
        <div class="row">
          <% post.each do |post| %>
            <div class="col-md-6">
              <div class="post">
                <% if post.image.exists? %>
                  <%= image_tag post.image.url, style: 'width: 100%%' %>
                <% end %>
                <div class="post-content">
                  <h3>
                    <%= post.title %>
                  </h3>
                  <small>
                    Posted by <%= post.user.name %> on <%= post.created_at.strftime('%d %B %Y | %H:%M') %>
                  </small>
                  <%= raw post.body.truncate(200) %>
                  <%= link_to 'Read More', post_path(post), class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>No Posts in this category yet</p>
    <% end %>    
  </div>
  