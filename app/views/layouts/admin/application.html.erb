<!DOCTYPE html>
<html>
  <head>
    <title>bartyBlog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render '/admin/shared/nav' %>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
              <div class="well">
                <div id="user_nav" class="pull-right">
                  <% if current_user %>
                      Logged In as <%= current_user.email %>
                      <%= link_to "Log Out", admin_logout_path, class: 'btn btn-danger' %>
                  <% else %>
                      <%= link_to "Log In", admin_login_path %>
                   <% end %>
                </div>
                  <% if flash[:notice] %>
                    <div class="alert alert-success">
                      <%= flash[:notice] %>
                    </div>
                  <% end %>

                  <% if flash[:alert] %>
                    <div class="alert alert-danger">
                        <%= flash[:alert] %>
                    </div>
                  <% end %>

            
                <%= yield %>
            </div>   
          </div>
        </div>
      </div>
    </section>

    <%= render '/admin/shared/footer' %>

    <!-- Bootstrap core JavaScript
      ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    
  </body>
</html>
