<% if params[:controller] == 'posts' || params[:controller] == 'categories'%>
  <h2 class="page-header">
    Categories
  </h2>

  <div class="list-group">
    <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category), class: 'list-group-item' %>
    <% end %>
  </div>
<% end %>

