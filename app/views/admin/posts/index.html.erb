<h2 class="page-header">
  Manage Posts
  <%= link_to "Create New", new_admin_post_path, class: 'btn btn-success pull-right' %>
</h2>

<% if @posts.any? %>
  <table class="table table-striped">
    <tr>
        <th>Post Title</th>
        <th>Category</th>
        <th>Written by</th>
        <th>Created</th>
        <th>Last Updated</th>
        <th>Actions</th>
    </tr>
  
    <% @posts.each do |post| %>
        <tr>
            <td>
                <%= post.title %>
            </td>
            <td>
                <%= post.category.name %>
            </td>
            <td>
                <%= post.user.name %>
            </td>
            <td>
                <%= post.created_at.strftime('%d %B %Y | %H:%M') %>
            </td>
            <td>
                <%= post.updated_at.strftime('%d %B %Y | %H:%M') %>
            </td>
            <td>
                <%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-primary' %>
                <%= link_to 'delete', admin_post_path(post), method: :delete, data: { confirm: 'Really delete this post?'}, class: 'btn btn-danger' %>
            </td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate @posts %>
  <% else %>
      <p>There are no posts, yet.</p> 
  <% end %>
