<%= form_tag admin_sessions_path, class: 'form-signin' do %>
  <h2 class="form-signin-heading">bartyBlog</h2>
    <!-- alerts and notices -->
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %> 

  <!-- form -->
  <%= email_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email Address' %>
  <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
  <br>
  <%= submit_tag "Log in", class: 'btn btn-lg btn-primary btn-block' %>

<% end %>